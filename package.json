{
  "name": "team-spark-ai",
  "version": "0.1.0",
  "description": "AI-powered team communication and engagement platform",
  "private": true,
  "scripts": {
    "predev": "bash scripts/check-ports.sh",
    "dev": "PORT=${PORT:-3000} next dev",
    "dev:alt": "PORT=3001 next dev",
    "dev:custom": "read -p 'Enter port number: ' port && PORT=$port next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:setup": "tsx tests/e2e/setup/global-setup.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "supabase:start": "supabase start",
    "supabase:start:clean": "supabase stop && supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "check:ports": "bash scripts/check-ports.sh",
    "dev:server": "bash scripts/dev-server.sh",
    "stop:dev": "bash scripts/stop-dev.sh",
    "stop:all": "npm run supabase:stop && npm run stop:dev",
    "health": "curl -s http://localhost:${PORT:-3000}/api/health | jq . || echo 'Server not responding'",
    "verify": "bash scripts/verify-server.sh",
    "prepare": "husky install",
    "validate:stories": "tsx src/lib/user-stories/validate-cli.ts",
    "test:stories": "playwright test tests/e2e/stories",
    "report:stories": "npm run validate:stories && npm run test:stories -- --reporter=html",
    "pre-flight": "bash scripts/pre-flight-check.sh",
    "dev:safe": "npm run pre-flight && npm run dev"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^5.9.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.1.5",
    "@react-email/components": "^0.1.0",
    "@slack/bolt": "^3.22.0",
    "@slack/web-api": "^6.13.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.323.0",
    "next": "14.1.0",
    "next-intl": "^4.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.58.1",
    "recharts": "^2.12.0",
    "resend": "^4.6.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.67",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^5.9.1",
    "supabase": "^1.142.2",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
