{
  "name": "team-spark-ai",
  "version": "0.1.0",
  "description": "AI-powered team communication and engagement platform",
  "private": true,
  "scripts": {
    "predev": "bash scripts/check-ports.sh",
    "dev": "PORT=${PORT:-3000} next dev",
    "dev:alt": "PORT=3001 next dev",
    "dev:custom": "read -p 'Enter port number: ' port && PORT=$port next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "npm run type-check && npm run lint && npm run test && npm run format:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:setup": "tsx tests/e2e/setup/global-setup.ts",
    "test:db:setup": "bash scripts/test-db-setup.sh",
    "test:db:teardown": "bash scripts/test-db-teardown.sh",
    "test:with-db": "npm run test:db:setup && npm test; npm run test:db:teardown",
    "test:run": "bash scripts/run-tests.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "check:ports": "bash scripts/check-ports.sh",
    "dev:server": "bash scripts/dev-server.sh",
    "stop:dev": "bash scripts/stop-dev.sh",
    "stop:all": "npm run stop:dev",
    "health": "curl -s http://localhost:${PORT:-3000}/api/health | jq . || echo 'Server not responding'",
    "verify": "bash scripts/verify-server.sh",
    "prepare": "husky install",
    "prisma:seed": "tsx prisma/seed.ts",
    "validate:stories": "tsx src/lib/user-stories/validate-cli.ts",
    "pre-flight": "bash scripts/pre-flight-check.sh",
    "dev:safe": "npm run pre-flight && npm run dev",
    "api:validate": "tsx scripts/validate-openapi.ts",
    "api:docs": "echo 'API docs available at http://localhost:3000/api-docs'",
    "worker": "tsx src/worker.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "jobs:clean": "tsx scripts/clean-jobs.ts",
    "jobs:dashboard": "bull-board -p 3003 -r /bull",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docker:build": "docker build -t team-spark-ai .",
    "docker:run": "docker run -p 3000:3000 team-spark-ai",
    "docker:prod": "docker compose -f docker-compose.prod.yml up",
    "safe-push": "./safe-push.sh",
    "push": "./safe-push.sh"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.1",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@opentelemetry/winston-transport": "^0.13.0",
    "@prisma/client": "^5.9.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.1.5",
    "@react-email/components": "^0.1.0",
    "@slack/bolt": "^3.22.0",
    "@slack/web-api": "^6.13.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^4.28.10",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.56.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "immer": "^10.1.1",
    "ioredis": "^5.6.1",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.323.0",
    "next": "^14.2.30",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.1",
    "openapi-types": "^12.1.3",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.58.1",
    "recharts": "^2.12.0",
    "resend": "^4.6.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "zod": "^3.25.67",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.53.1",
    "@storybook/addon-docs": "^9.0.14",
    "@storybook/addon-onboarding": "^9.0.14",
    "@storybook/nextjs": "^9.0.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/swagger-ui-react": "^5.18.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^9.0.14",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^5.9.1",
    "storybook": "^9.0.14",
    "swagger-ui-react": "^5.25.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'",
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
